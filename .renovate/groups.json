{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "CoreDNS Group",
      "groupName": "coredns",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/coredns/charts/coredns"
      ],
      "minimumGroupSize": 1
    },
    {
      "description": "Flux Operator Group",
      "groupName": "flux-operator",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/controlplaneio-fluxcd/charts/flux-operator",
        "ghcr.io/controlplaneio-fluxcd/charts/flux-instance",
        "ghcr.io/controlplaneio-fluxcd/flux-operator-manifests"
      ],
      "minimumGroupSize": 3
    },
    {
      "description": "Rook-Ceph Group",
      "groupName": "rook-ceph",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/rook/rook-ceph",
        "ghcr.io/rook/rook-ceph-cluster"
      ],
      "minimumGroupSize": 2
    },
    {
      "description": "Talos Group",
      "groupName": "talos",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/siderolabs/installer",
        "ghcr.io/siderolabs/talosctl"
      ],
      "minimumGroupSize": 2
    },
    {
      "description": "Node Exporter Group",
      "groupName": "node-exporter",
      "matchDatasources": ["docker", "github-releases"],
      "matchPackageNames": [
        "quay.io/prometheus/node-exporter",
        "prometheus/node_exporter"
      ],
      "minimumGroupSize": 2
    }
  ]
}