{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "CoreDNS",
      "description": "CoreDNS Group",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/coredns/charts/coredns"
      ]
    },
    {
      "groupName": "Flux-Operator",
      "description": "Flux Operator Group",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/controlplaneio-fluxcd/charts/flux-operator",
        "ghcr.io/controlplaneio-fluxcd/charts/flux-instance"
      ]
    },
    {
      "groupName": "Intel-Device-Plugins",
      "description": "Intel Device Plugins Group",
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "intel-device-plugins-operator",
        "intel-device-plugins-gpu"
      ]
    },
    {
      "groupName": "Rook-Ceph",
      "description": "Rook-Ceph Group",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/rook/rook-ceph",
        "ghcr.io/rook/rook-ceph-cluster"
      ]
    },
    {
      "groupName": "Talos",
      "description": "Talos Group",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/siderolabs/installer",
        "ghcr.io/siderolabs/talosctl"
      ],
      "minimumGroupSize": 2
    }
  ]
}